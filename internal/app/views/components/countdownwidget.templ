package components

import "fmt"

templ CountdownWidget(hours int, minutes int, icon string) {
	<div class="countdown" hx-get="/countdown" hx-trigger="sse:countdown" hx-swap="outerHTML">
		<div class="hours">
			{ fmt.Sprintf("%00d", hours) }
		</div>
		<div class="minutes">
			{ fmt.Sprintf("%00d", minutes) }
		</div>
		<img src={ fmt.Sprintf("/assets/weather/bas/%s.svg", icon) }/>
	</div>
}
